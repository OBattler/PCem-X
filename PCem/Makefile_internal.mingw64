PCem-X64.exe: $(OBJ) $(FMOBJ) $(SIDOBJ) $(SLIRPOBJ)
	$(CC) $(OBJ) $(FMOBJ) $(SIDOBJ) $(SLIRPOBJ) -o "PCem-X64.exe" $(LIBS)

all : PCem-X64.exe

clean :
	rm -f *.o *.exe *.res

%.o : %.c
	$(CC) $(CFLAGS) -c $<

%.o : %.cc
	$(CPP) $(CFLAGS) -c $<

%.o : %.cpp
	$(CPP) $(CFLAGS) -c $<

pc.res: pc.rc
	$(WINDRES) -i pc.rc --input-format=rc -o pc.res -O coff
