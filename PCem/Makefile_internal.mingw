PCem-X.exe: $(OBJ) $(FMOBJ) $(SIDOBJ) $(SLIRPOBJ)
	$(CC) $(OBJ) $(FMOBJ) $(SIDOBJ) $(SLIRPOBJ) -o "PCem-X.exe" $(LIBS)

fall : PCem-X.exe

clean :
	rm -f *.o32 *.obj *.exe *.res32

%.obj : %.c
	$(CC) $(initcflags) -o $@ -c $<

%.o32 : %.c
	$(CC) $(CFLAGS) -o $@ -c $<

%.o32 : %.cc
	$(CPP) $(CFLAGS) -o $@ -c $<

%.o32 : %.cpp
	$(CPP) $(CFLAGS) -o $@ -c $<

pc.res32: pc.rc
	$(WINDRES) -i pc.rc --input-format=rc -o pc.res32 -O coff 
